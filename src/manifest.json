{
  "manifest_version": 3,
  "name": "Link Popout Extension",
  "version": "1.0",
  "description": "Open links in a popout modal with a keybind instead of a new tab.",
  "permissions": ["scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Link Popout Extension",
    "default_popup": "popup.html"
  }
}
